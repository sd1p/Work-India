generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String    @unique
  role      Role
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
}

model Train {
  id              Int       @id @default(autoincrement())
  name            String
  departure_time  DateTime
  source          String
  destination     String
  total_seats     Int
  available_seats Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  bookings        Booking[]
}

model Booking {
  id         Int           @id @default(autoincrement())
  trainId    Int
  userId     Int
  seatNumber Int?
  status     BookingStatus @default(AVAILABLE)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  Train Train @relation(fields: [trainId], references: [id])
  User  User  @relation(fields: [userId], references: [id])
}

enum BookingStatus {
  AVAILABLE
  CONFIRMED
  PENDING
  CANCELLED
  FAILED
}
